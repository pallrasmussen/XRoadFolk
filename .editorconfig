# .editorconfig for XRoadFolk (C#/.NET 8, Razor Pages)
# top-most EditorConfig file
root = true

# General formatting
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# files
[*.cs]
# Language version and code style
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

# Expression-level preferences
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning

# Pattern matching and new language features
dotnet_style_prefer_pattern_matching = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_pattern_local_over_anonymous_function = true:suggestion
csharp_style_prefer_tuple_swap = true:suggestion
csharp_style_prefer_index_operator = true:suggestion
csharp_style_prefer_range_operator = true:suggestion
csharp_style_prefer_null_check_over_type_check = true:suggestion

# Using directives
dotnet_sort_system_directives_first = true:suggestion
file_header_template = unset

# Modifier and accessibility preferences
csharp_prefer_static_local_function = true:suggestion
csharp_prefer_readonly_struct = true:suggestion
csharp_style_prefer_readonly_struct_member = true:suggestion
csharp_style_prefer_readonly_fields = true:warning
csharp_style_prefer_primary_constructors = true:suggestion

# Newlines and braces
csharp_new_line_before_open_brace = all
csharp_new_line_between_query_expression_clauses = true
# Enforce braces globally
dotnet_diagnostic.IDE0011.severity = warning

# Nullability and annotations
nullable = enable
# Additional nullable diagnostics
dotnet_diagnostic.CS8601.severity = warning
dotnet_diagnostic.CS8600.severity = warning
dotnet_diagnostic.CS8603.severity = warning
dotnet_diagnostic.CS8602.severity = error
dotnet_diagnostic.CS8604.severity = error

# .NET analyzers (tightened)
# Validate public parameter null checks
dotnet_diagnostic.CA1062.severity = warning
# Avoid explicit default value initialization
dotnet_diagnostic.CA1805.severity = warning
# Use ordinal/invariant string comparison where appropriate
dotnet_diagnostic.CA1309.severity = warning
# Dispose objects before losing scope
dotnet_diagnostic.CA2000.severity = warning

# Meziantou analyzers
# Promote MA0003 (Use StringComparison / Invariant) to warning for stricter enforcement
dotnet_diagnostic.MA0003.severity = warning

# Existing settings preserved below

dotnet_diagnostic.MA0048.severity = none
.dotnet_diagnostic.MA0051.severity = warning
.dotnet_diagnostic.MA0009.severity = suggestion
.dotnet_diagnostic.MA0016.severity = suggestion
.dotnet_diagnostic.MA0074.severity = warning
.dotnet_diagnostic.MA0099.severity = suggestion
.dotnet_diagnostic.MA0042.severity = suggestion
.dotnet_diagnostic.MA0004.severity = suggestion
.dotnet_diagnostic.MA0039.severity = suggestion
.dotnet_diagnostic.MA0002.severity = warning
.dotnet_diagnostic.MA0006.severity = warning
.dotnet_diagnostic.MA0040.severity = suggestion

# Razor files
[*.cshtml]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JSON / config files
[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Web project: Enforce ConfigureAwait/Task.ConfigureAwait and CancellationToken usage
[src/XRoadFolkWeb/**]
dotnet_diagnostic.MA0004.severity = warning
[src/XRoadFolkWeb/**]
dotnet_diagnostic.MA0042.severity = warning
[src/XRoadFolkWeb/**]
dotnet_diagnostic.MA0040.severity = warning

# Incremental tightening
[src/XRoadFolkWeb/Infrastructure/BestMatchRequestCultureProvider.cs]
dotnet_diagnostic.MA0074.severity = warning

# Library-specific tightening
[src/XRoadFolkRaw.Lib/**]
dotnet_diagnostic.MA0004.severity = warning
[src/XRoadFolkRaw.Lib/**]
dotnet_diagnostic.MA0042.severity = warning
[src/XRoadFolkRaw.Lib/**]
dotnet_diagnostic.MA0040.severity = warning

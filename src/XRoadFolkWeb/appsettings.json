{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Verbose": false,
    "MaskTokens": true
  },
  "Retry": {
    "Http": {
      "Attempts": 3,
      "BaseDelayMs": 200,
      "JitterMs": 250
    }
  },
  "Http": { "BypassServerCertificateValidation": true },
  "Localization": {
    "DefaultCulture": "fo-FO",
    "SupportedCultures": [ "fo-FO", "da-DK", "en-US" ]
  },
  "AllowedHosts": "*",

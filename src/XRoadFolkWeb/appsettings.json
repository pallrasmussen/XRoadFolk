    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=XRoadFolkDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "IdentityServer": {
    "Clients": {
      "XRoadFolkWeb": {
        "Enabled": true,
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "Branding": { "AuthorName": "Landsjúkrahúsið" },
  "Operations": {
    "GetPerson": {
      "Request": {
        "Id": null,
        "PublicId": null,
        "Ssn": null,
        "ExternalId": null,
        "Include": {
          "Addresses": true,
          "AddressesHistory": true,
          "BiologicalParents": false,
          "ChurchMembership": false,
          "CivilStatusHistory": true,
          "ForeignSsns": true,
          "ChurchMembershipHistory": false,
          "Citizenships": true,
          "CitizenshipsHistory": true,
          "CivilStatus": true,
          "Incapacity": true,
          "IncapacityHistory": true,
          "JuridicalChildren": false,
          "JuridicalChildrenHistory": false,
          "JuridicalParents": false,
          "JuridicalParentsHistory": false,
          "Names": true,
          "NamesHistory": true,
          "Notes": false,
          "NotesHistory": false,
          "Postbox": true,
          "SpecialMarks": false,
          "SpecialMarksHistory": false,
          "Spouse": false,
          "SpouseHistory": false,
          "Ssn": true,
          "SsnHistory": true
        }
      }
    }
  }
}

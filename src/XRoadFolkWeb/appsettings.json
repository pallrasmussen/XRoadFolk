{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Verbose": true,
    "AllowVerboseInProduction": false,
    "MaskTokens": true
  },
  "Features": {
    "ShowLogs": true,
    "Logs": {
      "Enabled": true
    }
  },
  "HttpLogs": {
    "Capacity": 1000,
    "MaxWritesPerSecond": 200,
    "AlwaysAllowWarningsAndErrors": true,
    "PersistToFile": false,             // Don't set to true in production unless you have a good reason !
    "FilePath": "logs/http-logs.log",
    "MaxFileBytes": 5000000,
    "MaxRolls": 3,
    "MaxQueue": 5000,
    "FlushIntervalMs": 250
  },
  "Session": {
    "Cookie": {
      "IsEssential": true
    }
  },
  "Retry": {
    "Http": {
      "Attempts": 3,
      "BaseDelayMs": 200,
      "JitterMs": 250
    }
  },
  "Http": { "BypassServerCertificateValidation": false },
  "Localization": {
    "DefaultCulture": "fo-FO",
    "SupportedCultures": [ "fo-FO", "da-DK", "en-US" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=XRoadFolkDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "IdentityServer": {
    "Clients": {
      "XRoadFolkWeb": {
        "Enabled": true,
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "Branding": { "AuthorName": "Landsjúkrahúsið" },
  "Operations": {
    "GetPerson": {
      "Request": {
        "Id": null,
        "PublicId": null,
        "Ssn": null,
        "ExternalId": null,
        "Include": {
          "Addresses": true,
          "AddressesHistory": true,
          "BiologicalParents": false,
          "ChurchMembership": false,
          "ChurchMembershipHistory": false,
          "Citizenships": true,
          "CitizenshipsHistory": true,
          "CivilStatus": true,
          "CivilStatusHistory": true,
          "ForeignSsns": true,
          "Incapacity": false,
          "IncapacityHistory": false,
          "JuridicalChildren": false,
          "JuridicalChildrenHistory": false,
          "JuridicalParents": true,
          "JuridicalParentsHistory": true,
          "Names": true,
          "NamesHistory": true,
          "Notes": false,
          "NotesHistory": false,
          "Postbox": true,
          "SpecialMarks": false,
          "SpecialMarksHistory": false,
          "Spouse": false,
          "SpouseHistory": false,
          "Ssn": true,
          "SsnHistory": true
        }
      }
    }
  }
}

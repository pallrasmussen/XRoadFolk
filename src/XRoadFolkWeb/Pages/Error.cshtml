@page "/Error/{statusCode?}"
@model XRoadFolkWeb.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
    var status = Model.StatusCode;
}
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4">@Model.Title</h1>
          <p class="text-muted mb-2">Status code: <strong>@status</strong></p>
          @if (!string.IsNullOrWhiteSpace(Model.Message)) {
            <p>@Model.Message</p>
          }
          <a asp-page="/Index" class="btn btn-primary">Back to home</a>
        </div>
      </div>
    </div>
  </div>
</div>

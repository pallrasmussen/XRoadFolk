@page
@model XRoadFolkWeb.Pages.IndexModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    ViewData["Title"] = L["Title"];
}

<h1 class="mb-4">@L["Title"]</h1>

<div class="row g-4">
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@L["SearchCriteria"]</h5>
                <p class="text-muted mb-3">@L["ProvideCriteria"]</p>

                <form method="post" class="row gy-3">
                    <div class="col-12">
                        <label for="Ssn" class="form-label">@L["SSN"]</label>
                        <input id="Ssn" name="Ssn" value="@Model.Ssn" class="form-control" />
                    </div>

                    <div class="col-12">
                        <div class="text-center text-muted-sep">@L["OrSeparator"]</div>
                    </div>

                    <div class="col-md-6">
                        <label for="FirstName" class="form-label">@L["FirstName"]</label>
                        <input id="FirstName" name="FirstName" value="@Model.FirstName" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label for="LastName" class="form-label">@L["LastName"]</label>
                        <input id="LastName" name="LastName" value="@Model.LastName" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label for="DateOfBirth" class="form-label">@L["DateOfBirthPrompt"]</label>
                        <input id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth" class="form-control" />
                    </div>

                    <div class="col-12 d-grid d-sm-flex gap-2 mt-2">
                        <button type="submit" class="btn btn-primary">@L["Search"]</button>
                    </div>
                </form>

                @if (Model.Errors?.Count > 0)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        <strong>@L["InputErrors"]</strong>
                        <ul class="mb-0">
                            @foreach (var e in Model.Errors)
                            {
                                <li>@e</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        @if (Model.Results?.Count > 0)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">@L["Matches"]</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@L["PublicId"]</th>
                                    <th>@L["SSN"]</th>
                                    <th>@L["First"]</th>
                                    <th>@L["Last"]</th>
                                    <th>@L["DOB"]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.Results)
                                {
                                    <tr>
                                        <td>@r.PublicId</td>
                                        <td>@r.SSN</td>
                                        <td>@r.FirstName</td>
                                        <td>@r.LastName</td>
                                        <td>@r.DateOfBirth</td>
                                        <td class="text-end">
                                            @if (!string.IsNullOrWhiteSpace(r.PublicId))
                                            {
                                                <a class="btn btn-outline-secondary btn-sm" href="?publicId=@Uri.EscapeDataString(r.PublicId)">@L["Details"]</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @if (Model.PersonDetails is not null)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@L["PersonDetails"]</h5>
                    <pre class="mb-0" style="white-space: pre-wrap;">@foreach (var (k, v) in Model.PersonDetails){
                    @: @k : "@v"
}
</pre>
                </div>
            </div>
        }
    </div>
</div>

@{
    var t = L["Title"];
}
<!-- Removed invalid check for t.ResourceNotFound -->

<environment include="Development">
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</environment>
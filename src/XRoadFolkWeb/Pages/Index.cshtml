                    <pre id="ppi-xml-raw"
                         class="mb-0 small bg-body-tertiary p-3 border rounded"
                         style="white-space: pre; overflow: auto; max-height: 40vh; display: none;">@Model.PeoplePublicInfoResponseXml</pre>

                    <div id="ppi-xml-tree"
